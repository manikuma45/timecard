.container.text-center
  .row.justify-content-around
    .col-12.h-25.mb-5.text-center
  = form_with model: @affiliation, local: true do |f|
    -if @affiliation.errors.any?
      #error_explanation
      %h2
        = @affiliation.errors.count
        件のエラーがあります。
      %ul
      - @affiliation.errors.full_messages.each do |msg|
        %li.mb-3
          = msg

    .row.justify-content-around
      .form-group.col-12.h-25.mb-5.text-center
        = f.label :name
        = f.text_field :name, class: "form-control input-lg h-25 p-4 text-center"
      .form-group.col-12.h-25.mb-5
        = f.submit class: "form-control input-lg h-25 p-4 btn-dark"